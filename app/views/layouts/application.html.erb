<!DOCTYPE html>
<html>
<head>
  <title>Ferris Americus</title>

  <%= favicon_link_tag '/assets/favicon.ico' %>

  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Raleway+Dots" %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Codystar" %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <% if is_mobile_device? %>
  	<%= stylesheet_link_tag "mobile", :media => "all" %>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1 id="ferris_americus"><%= link_to 'FERRIS AMERICUS', root_path %></h1>
<span id="about_link"><%= link_to 'about', about_path %></span>

<% if flash[:notice] %>
	<div class="flash_notice"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
	<div class="flash_error"><%= flash[:error] %></div>
<% end %>
<% if flash[:alert] %>
	<div class="flash_error"><%= flash[:alert] %></div>
<% end %>

<%= yield %>

</body>
</html>
